<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="phpcuong_customer_chatbox" translate="label" type="text" sortOrder="600" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Customer Chatbox</label>
            <tab>general</tab>
            <resource>Magento_Backend::general</resource>
            <group id="general" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="facebook_messenger_enable" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Facebook Messenger</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="facebook_messenger_customer_chat_code" translate="label comment" type="textarea" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Customer Chat Code</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="phpcuong_customer_chatbox/general/facebook_messenger_enable">1</field>
                    </depends>
                </field>
                <field id="tawk_enable" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Tawk.to</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="tawk_widget_code" translate="label comment" type="textarea" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Widget Code</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="phpcuong_customer_chatbox/general/tawk_enable">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
